<h1><%= @dish.name %></h1>
<p><%= @dish.description %></p>

<h3><%= "Chef: #{@dish.chef.name}" %></h3>

<h4>Ingredient List:</h4>
<% @dish.ingredients.each do |ingredient| %>
  <%= ingredient.name %> <%= button_to "Delete #{ingredient.name}", "/dishes/#{@dish.id}/ingredients/#{ingredient.id}", method: :delete %><br>
<% end %>

<p><%= "Calorie Count: #{@dish.calorie_count}" %></p>


<%= form_with url: "/dishes/#{@dish.id}", method: :patch, local: :true do |f| %>
  <%= f.text_field :add_ingredient %>
  <%= f.submit "Add ingredient" %>
<% end %>

